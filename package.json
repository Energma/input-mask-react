{
  "name": "@energma/workspace",
  "version": "0.0.0",
  "type": "module",
  "pnpm": {
      "onlyBuiltDependencies": ["esbuild"]
  },
  "scripts": {
    "dev": "pnpm --filter test-app dev",
    "test-watch": "pnpm --filter input-mask-react test-watch",
    "test": "pnpm --filter input-mask-react test",
    "build": "pnpm --filter input-mask-react build",
    "run-tests": "pnpm test",
    "build-package": true,
    "publish-package": true,
    "clean-all": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +; find . -name 'dist' -type d -prune -exec rm -rf '{}' +"
  }
}